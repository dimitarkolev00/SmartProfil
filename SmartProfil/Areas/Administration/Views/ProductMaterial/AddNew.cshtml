@model SmartProfil.ViewModels.InputModels.AddProductMaterialTypeInputModel

@{
    this.ViewData["Title"] = "Add new product material type";
}

<h2 style=" color: purple">@this.ViewData["Title"]</h2>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" style="color: mediumseagreen" />
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}