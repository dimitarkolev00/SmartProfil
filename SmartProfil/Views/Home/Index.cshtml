@using System.Collections.Specialized
@model SmartProfil.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-heading alert-dismissible" style="color: mediumseagreen; font-weight: bold; text-align: center">
        @this.TempData["Message"]
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="padding-top: 7px">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/indexImg/1.png" width="700" height="460" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/indexImg/2.jpg" width="700" height="460" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/indexImg/3.jpg" width="700" height="460" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/indexImg/4.jpg" width="700" height="460" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/indexImg/5.jpg" width="700" height="460" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/indexImg/7.jpg" width="700" height="460" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<h1 class="display-5">Welcome to <span style="color: mediumseagreen">Smart</span><span style="color: purple">Profil</span></h1>

<div class="text-center">
    <div class="col-md-10 " style="padding-left: 200px; padding-top: 10px">
        <div class="row">
            @foreach (var product in Model.RandomProducts)
            {
                <div class="card col-md-3">
                    <a asp-controller="Products" asp-action="ById" asp-route-id="@product.Id">
                        <img class="card-img-top" src="@product.Image" alt="@product.Name" style="height: 200px;width: 200px">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title"><a asp-controller="Products" asp-action="ById" asp-route-id="@product.Id">@product.ManufacturerName @product.Name @product.Model</a></h5>
                        <p class="card-text">@product.UnitPrice лв.</p>
                        <a asp-controller="Products" asp-action="ById" asp-route-id="@product.Id" class="btn btn-success" style="padding:auto">View product</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


