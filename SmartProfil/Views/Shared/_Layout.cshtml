<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/x-icon" href="~/LogoWhite.ico" />
    <title>@ViewData["Title"] - SmartProfil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css" integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h" crossorigin="anonymous">
    <link href="~/css/lazy.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-success" style="height: 70px">
            <div class="container">
                <a class="navbar-brand" style="color: white; font-weight: bold " asp-area="" asp-controller="Home" asp-action="Index">SmartProfil</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home" style="padding-right: 6px"></i>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fas fa-user-secret" style="padding-right: 6px"></i>Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Contacts"><i class="fas fa-address-book" style="padding-right: 6px"></i>Contacts</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="font-weight: inherit;" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Products" asp-action="All">
                                <i class="fas fas fa-store" style="padding-right: 6px"></i> Products
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="All">All</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="AllProfiles">Profile</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="AllAccessories">Accessories</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="AllWindowSills">Window sill</a>
                                @*<a class="dropdown-item" asp-area="Administration" asp-controller="Manufacturer" asp-action="AddNew">Thermopanels</a>*@
                            </div>
                        </li>
                        @if (@User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" style="font-weight: inherit; color:purple" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user-cog" style="padding-right: 6px"></i> Administration
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Create">Create Product</a>
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="ProductsEdit" asp-action="Index">Edit product</a>
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="Category" asp-action="AddNew">Add new category</a>
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="Manufacturer" asp-action="AddNew">Add new manufacturer</a>
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="ProductMaterial" asp-action="AddNew">Add new material</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="" style="padding-right: 60px; padding-left: 60px">
        <main role="main" class="pb-3">
            <partial name="_CookieConsentPartial" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="container">
            &copy; 2020 - SmartProfil - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/lazy.js"></script>
    <script src="~/lib/datatables/media/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
