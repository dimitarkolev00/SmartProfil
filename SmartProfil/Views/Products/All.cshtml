@model SmartProfil.ViewModels.ProductsListViewModel
@{
    this.ViewData["Title"] = "All products";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    @foreach (var product in this.Model.Products)
    {
        <div class="card col-md-4" style="width: 18rem;">
            <img class="card-img-top mx-1" src="@product.Image" alt="Card image cap" style="width: 17rem; height: 12rem;">
            <div class="card-body">
                <h5 class="card-title">@product.Manufacturer  @product.Name  @product.Model</h5>
                <p class="card-text">@product.Description</p>
                <a href="#" class="btn btn-success">Buy</a>
            </div>
        </div>
    }
</div>
<hr />
<partial name="_PagingPartial" model="@Model"/>